<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 连框颜色值 -->
    <item>
        <shape>
            <stroke
                android:width="0.6dp"
                android:color="@color/colorDivider" />
        </shape>
    </item>
    <!-- 主体背景颜色值 -->
    <item android:bottom="0.6dp"> <!--设置只有底部有边框-->
        <shape>
            <solid android:color="#ffffff" />
        </shape>
    </item>
</layer-list>